
<div class="container">

    <h1>Eat-Da-Burger!</h1>

        <div class="row">
            <div class="col m6">
              <div class="card horizontal #ffb74d orange lighten-2">
                <div class="card-image">
                    <img src="/assets/img/burger.png">
                </div>
                <div class="card-stacked">
                  <div class="card-content">
                      <span class="card-title">So many burgers, so little time!</span>
                        <ul>
                          {{#each burgers}}
                            {{#unless devoured}}
                              {{> burgers/burger-block devoured=false}}
                            {{/unless}}
                          {{/each}}
                        </ul>
                  </div>
                </div>
              </div>
            </div>  
            <div class="col m6">
              <div class="card horizontal #ffb74d orange lighten-2">
                  <div class="card-image">
                    <img src="/assets/img/burger.png">
                  </div>
                  <div class="card-stacked">
                    <div class="card-content">
                        <span class="card-title">I can't believe I ate them all!</span>
                          <ul>
                            {{#each burgers}}
                              {{#if devoured}}
                                {{> burgers/burger-block devoured=true}}
                              {{/if}}
                            {{/each}}
                          </ul>
                    </div>
                  </div>
              </div>
            </div>  
        </div>

    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burgers">Enter a Burger Name between 1 and 35 characters long:</label>
        <input type="text" id="burger-id" name="burger-name">
      </div>

      <button type="submit">Add Burger</button>
    </form>

    <footer class="footer">
        <p class="right-align"><a id="github" href="https://github.com/jenguin777/burger">GitHub Repo</a></p>
    </footer>

</div>

